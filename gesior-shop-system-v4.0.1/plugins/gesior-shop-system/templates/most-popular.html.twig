<table border="0" cellspacing="1" cellpadding="4" width="100%">
	<tr style="background-color: {{ config.vdarkborder }}; text-align: center">
		<td class="white" colspan="3">
			<strong>The most popular items in Shop!</strong>
		</td>
	</tr>
	<tr style="background-color: {{ config.vdarkborder }}; text-align: center">
		<td class="white" style="width: 33%">
			<b>#1</b>
		</td>
		<td class="white" style="width: 33%">
			<b>#2</b>
		</td>
		<td class="white" style="width: 33%">
			<b>#3</b>
		</td>
	</tr>
	<tr>
	{% set i = 0 %}
	{% for offer in offers %}
		<td style="background-color: {{ getStyle(i) }}; text-align: center">
			{{ offer.images|raw }}
			<br/><br/>
			Offer Name: <b>{{ offer.name }}</b><br />
			Points: <b>{{ offer.points }}</b><br />
			{% if logged %}
			<form action="?subtopic=gifts&action=select_player" method=POST>
				<input type="hidden" name="buy_id" value="{{ offer.id }}">
				<input type="submit" value="Buy">
			</form>
			{% endif %}
		</td>
		{% set i = i + 1 %}
	{% else %}
		<td style="background-color: {{ getStyle(i) }}; text-align: center" colspan="3">
			Nothing bought yet.
		</td>
	{% endfor %}
	</tr>
</table>
<br/>
